<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/yellow</item> <!-- Background color -->
        <item name="android:textColor">@color/black</item> <!-- Default text color -->

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text/icons on primary color -->

        <!-- Surface and On-Surface Colors -->
        <item name="colorSurface">@color/yellow</item>
        <item name="colorOnSurface">@color/white</item> <!-- Text/icons on surfaces -->

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Light icons on dark background -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.app.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/recipelogo</item>
        <item name="postSplashScreenTheme">@style/Theme.RecipeApp</item>
    </style>

    <style name="CircularButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <!-- Ensure the button is circular -->
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">50dp</item> <!-- Radius ensures circular shape -->

        <!-- Center content -->
        <item name="android:gravity">center</item> <!-- Ensures text and icon are centered -->

        <!-- Remove padding for proper alignment -->
        <item name="android:padding">0dp</item>
        <item name="iconPadding">0dp</item>

        <!-- Button background and icon styles -->
        <item name="android:background">@drawable/circle</item>
        <item name="iconSize">36dp</item> <!-- Icon size -->
        <item name="iconTint">@android:color/white</item> <!-- Icon color -->
    </style>
</resources>
